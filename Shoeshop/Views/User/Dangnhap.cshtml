
@{
    ViewBag.Title = "Dangnhap";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<h4 style="color:red">@ViewBag.ThongBao</h4>
<table align="center">
    <h2 style="text-align:center; color: coral; font-weight: bold">ĐĂNG NHẬP</h2>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)


        <tr style="height:40px">
            <td>
                Tên Đăng Nhập:
            </td>
            <td>
                @Html.TextBox("TenDN")
                @ViewData["Loi1"]
            </td>
        </tr>
        <tr style="height:40px">
            <td align="right">
                Mật Khẩu:
            </td>
            <td>
                @Html.Password("MatKhau")
                @ViewData["Loi2"]
            </td>
        </tr>

        <tr style="height:40px">
            <td>
            </td>
            <td>
                <input type="submit" value="Đăng Nhập" />
            </td>
        </tr>
    }
</table>


