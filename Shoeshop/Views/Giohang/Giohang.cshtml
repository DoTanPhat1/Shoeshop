@using Shoeshop.Models
@model List<Giohang>
@{
    ViewBag.Title = "Giohang";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2 style="text-align:center; color:red">THÔNG TIN GIỎ HÀNG</h2>
<table border="1" align="center" width="100%">
    <tr>
        <td style="text-align: center; font-weight: bold">Mã Giày</td>
        <td style="text-align: center; font-weight: bold">Tên Giày</td>
        <td style="text-align: center; font-weight: bold">Ảnh Giày</td>
        <td style="text-align: center; font-weight: bold">Số Lượng</td>
        <td style="text-align: center; font-weight: bold">Đơn Giá</td>
        <td style="text-align: center; font-weight: bold">Thành Tiền</td>
        <td></td>
        <td></td>
        <td></td>
    </tr>
    @foreach (var item in Model)
    {
        <tr style="text-align:center;height:auto; font-weight:bold">
            <td>@item.iMagiay</td>
            <td>@item.sTengiay</td>
            <td><img width="70px" src="~/product_imgs/@item.sAnhbia" /></td>
            @using (Html.BeginForm("CapnhatGiohang", "Giohang", new { @iMaSP = item.iMagiay }))
            {
                <td><input type="number" min="1" name="txtSoluong" value="@item.iSoluong" /></td>
                <td>@string.Format("{0:0,0}", item.dDongia)</td>
                <td>@string.Format("{0:0,0}", item.dThanhtien)</td>
                <td><a href="@Url.Action("Details", "Shoeshop", new { id = item.iMagiay })">Chi tiết</a></td>
                <td> @Html.ActionLink("Xóa", "XoaGiohang", new { @iMaSP = item.iMagiay })</td>
                <td><input type="submit" value="Cập nhật" /></td>
            }
        </tr>
    }
    <tr style="font-weight:bold; text-align:right; color:red">

        <td colspan="4" style="text-align: center"> Số lượng giày:@ViewBag.Tongsoluong</td>
        <td colspan="5" style="text-align: center">Tổng tiền: @string.Format("{0:0,0}", ViewBag.Tongtien) VND</td>
    </tr>
    <tr style="font-weight:bold; text-align:right; color:red">
        <td colspan="9" style="text-align: center">
            @Html.ActionLink("Xóa Giỏ Hàng","XoaTatCaGioHang")
        </td>
    </tr>
    <tr style="font-weight:bold; text-align:center; color:red">
        <td colspan="9"> @Html.ActionLink("Đặt Hàng", "Dathang", "Giohang")</td>
    </tr>
</table>
