@model Shoeshop.Models.GIAY

@{
    ViewBag.Title = "ChitietGiay";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2> THÔNG TIN CHI TIẾT GIÀY </h2>

<div>
  
    <hr />
    <dl class="dl-horizontal">

        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    Tên giày:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Tengiay)
                </dd>

                <dt>
                    Giá bán:
                </dt>

                <dd>
                    @String.Format("{0:0,0}", Model.GiaBan) VNĐ
                </dd>

                <dt>
                    Mô tả:
                </dt>

                <dd style="width:600px; text-align:justify">
                    @Html.DisplayFor(model => model.MoTa)
                </dd>

                <dt>
                    Ảnh giày:
                </dt>

                <dd>
                    <img src="@Url.Content("~/product_imgs/" +Model.AnhBia)" width="120" />
                </dd>

                <dt>
                    Ngày cập nhật:
                </dt>

                <dd>
                    @String.Format("{0:dd/MM/yyyy}", Model.NgayCapNhat)
                </dd>

                <dt>
                    Số lượng tồn:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.SoLuongTon)
                </dd>

                <dt>
                    Thương hiệu:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.THUONGHIEU.TenThuongHieu)
                </dd>

                <dt>
                    Loại giày:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.LOAIGIAY.Tenloai)
                </dd>

            </dl>
        </div>
<p>
    @Html.ActionLink("ĐIỀU CHỈNH", "Suagiay", new { id = Model.Magiay }) |
    @Html.ActionLink("TRỞ VỀ", "Giay")
</p>
